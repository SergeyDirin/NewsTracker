<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DarkEnergy" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/primary_dark_energy</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:colorBackground">@color/primary_dark_energy</item>
        <item name="android:colorForeground">@color/foreground_dark_energy</item>
        <item name="android:textColorSecondary">@color/textSecondary_dark_energy</item>
    </style>

    <style name="BigTextTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>

    <style name="DrawerItem" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:typeface">serif</item>
    </style>
</resources>
